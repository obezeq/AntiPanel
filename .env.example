# ========================================
# Environment Variables Example
# Copy this file to .env and update values
# ========================================

# ========================================
# Database Configuration
# ========================================
POSTGRES_DB=antipanel
POSTGRES_USER=antipanel_user
POSTGRES_PASSWORD=antipanel_password

# ========================================
# Spring Boot Configuration
# ========================================
SPRING_PROFILES_ACTIVE=dev

# ========================================
# Server Configuration
# ========================================
SERVER_PORT=8080

# ========================================
# pgAdmin Configuration (Development)
# ========================================
PGADMIN_DEFAULT_EMAIL=admin@antipanel.local
PGADMIN_DEFAULT_PASSWORD=admin

# ========================================
# Paymento Payment Gateway
# ========================================
# Get credentials from https://paymento.io dashboard
PAYMENTO_API_KEY=your_paymento_api_key_here
PAYMENTO_API_SECRET=your_paymento_api_secret_here
PAYMENTO_RETURN_URL=http://localhost:4200/wallet

# ========================================
# DripfeedPanel Provider
# ========================================
# Get API key from https://dripfeedpanel.com dashboard
DRIPFEED_PANEL_API_KEY=your_dripfeed_panel_api_key_here
